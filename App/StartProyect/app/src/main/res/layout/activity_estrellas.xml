<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hn.jepz.www.startproyect.EstrellasActivity">
    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Empezando"
        android:textSize="20sp"
        android:textColor="?attr/colorAccent"
        android:id="@+id/tituloEstrella"
        />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/estrella_contorno"
            android:id="@+id/ivEstrella1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/estrella_contorno"
            android:id="@+id/ivEstrella2"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/estrella_contorno"
            android:id="@+id/ivEstrella3"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/estrella_contorno"
            android:id="@+id/ivEstrella4"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/estrella_contorno"
            android:id="@+id/ivEstrella5"/>
    </LinearLayout>
</LinearLayout>
